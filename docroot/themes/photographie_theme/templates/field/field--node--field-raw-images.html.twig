{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field--label',
    label_display == 'visually_hidden' ? 'sr-only',
  ]
%}

{% if multiple %}
  {% for item in items %}
  <div class="grid-item image-wrapper">
    <label class="image-select-wrapper" for="image-{{ item.content['#item'].entity.fid.value }}">
      <img src="{{ attribute(photographie_theme_image_unexpanded, item.content['#item'].entity.fid.value) }}" />
      <input id="image-{{ item.content['#item'].entity.fid.value }}" class="image-selection-box" type="checkbox" name="image-{{ item.content['#item'].entity.fid.value }}" value="{{ item.content['#item'].entity.uri.value }}" />
    </label>
    <a class="popup-image-expand" href="{{ attribute(photographie_theme_image_expanded, item.content['#item'].entity.fid.value) }}"><i class="expand-icon fa fa-search-plus" aria-hidden="true"></i></a>
  </div>
  {% endfor %}
{% else %}
  <div class="grid-item image-wrapper">
    <label class="image-select-wrapper" for="image-{{ item.content['#item'].entity.fid.value }}">
      <img src="{{ attribute(photographie_theme_image_unexpanded, item.content['#item'].entity.fid.value) }}" />
      <input id="image-{{ item.content['#item'].entity.fid.value }}" class="image-selection-box" type="checkbox" name="image-{{ item.content['#item'].entity.fid.value }}" value="{{ item.content['#item'].entity.uri.value }}" />
    </label>
    <a class="popup-image-expand" href="{{ attribute(photographie_theme_image_expanded, item.content['#item'].entity.fid.value) }}"><i class="expand-icon fa fa-search-plus" aria-hidden="true"></i></a>
  </div>
{% endif %}
