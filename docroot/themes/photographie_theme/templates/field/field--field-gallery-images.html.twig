{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field--label',
    label_display == 'visually_hidden' ? 'sr-only',
  ]
%}

{% if multiple %}
  {% for item in items %}
    <div class="grid-item">
      {{ item.content }}
    </div>
  {% endfor %}
{% else %}
  <div class="grid-item">
    {{ item.content }}
  </div>
{% endif %}
